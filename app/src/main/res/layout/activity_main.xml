<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/g">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="false"
        android:id="@+id/main"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:minHeight="400dp"
            android:minWidth="400dp"
            android:layout_weight="1"
            android:background="#ff040003"
            android:id="@+id/top"
            android:weightSum="1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PowerTitle"
                android:text="Power"
                android:textColor="#fffff4fd"
                android:textSize="25dp" />

            <ToggleButton
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="@string/Power_Button"
                android:id="@+id/PowerButton"
                android:height="20dp"
                android:layout_weight="0.06" />

            <EditText
                android:layout_width="814dp"
                android:layout_height="wrap_content"
                android:id="@+id/DisplayBox"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.39"
                android:textColor="#fffbfbfb"
                android:text="Display"
                android:background="#fffbfbfb" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:layout_gravity="center_horizontal"
                android:id="@+id/Presets">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/Preset1"
                    android:layout_row="2"
                    android:layout_column="0" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/Preset2"
                    android:layout_row="2"
                    android:layout_column="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/Preset3"
                    android:layout_row="2"
                    android:layout_column="2" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/Preset4"
                    android:layout_row="2"
                    android:layout_column="3" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/Preset5"
                    android:layout_row="2"
                    android:layout_column="4" />
            </GridLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"></FrameLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TunerTitle"
                android:text="Tuner"
                android:textColor="#fffcfcfc"
                android:textSize="25dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.32"
                android:columnCount="73">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Down"
                    android:id="@+id/TuenDown"
                    android:layout_row="0"
                    android:layout_column="0" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Up"
                    android:id="@+id/TuneUp"
                    android:layout_row="0"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:id="@+id/AM"
                    android:layout_row="0"
                    android:layout_column="71"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FM"
                    android:id="@+id/FM"
                    android:layout_row="0"
                    android:layout_column="72"
                    android:textSize="25dp" />
            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="0dp"
            android:layout_weight="1"
            android:background="#4a130f12"
            android:id="@+id/bottom"
            android:weightSum="1">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="72"
                android:rowCount="17"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pause"
                    android:id="@+id/PauseButton"
                    android:layout_row="0"
                    android:layout_column="0" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop"
                    android:id="@+id/StopButton"
                    android:layout_row="0"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&lt;&lt;"
                    android:id="@+id/Repeat"
                    android:layout_row="0"
                    android:layout_column="2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">>"
                    android:id="@+id/Forward"
                    android:layout_row="0"
                    android:layout_column="3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eject"
                    android:id="@+id/EjectButton"
                    android:layout_row="0"
                    android:layout_column="4" />
            </GridLayout>

            <EditText
                android:layout_width="837dp"
                android:layout_height="wrap_content"
                android:id="@+id/CD"
                android:layout_gravity="center_horizontal"
                android:background="#fffbfbfb" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VolumeTitle"
                android:text="Volume"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/VolUp"
                android:textSize="50dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/VolDown"
                android:textSize="50dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
